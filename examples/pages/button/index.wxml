<view class="demo-page">
  <view class="demo-view demo-p-1 demo-my-1">
    <view class="demo-title">type</view>
    <view class="demo-desc">颜色示例</view>
    <z-button class="demo-mb-1 demo-block" size="medium" type="primary">primary</z-button>
    <z-button class="demo-mb-1 demo-block" size="medium" type="success">success</z-button>
    <z-button class="demo-mb-1 demo-block" size="medium" type="warning">warning</z-button>
    <z-button class="demo-mb-1 demo-block" size="medium" type="danger">danger</z-button>
    <z-button class="demo-mb-1 demo-block" size="medium" type="info">info</z-button>
    <z-button class="demo-block" size="medium" type="default">default</z-button>
  </view>

  <view class="demo-view demo-p-1 demo-my-1">
    <view class="demo-title">mode</view>
    <view class="demo-desc">风格示例</view>
    <z-button class="demo-mb-1 demo-block" mode="raised" size="medium" type="primary">raised</z-button>
    <z-button class="demo-mb-1 demo-block" mode="plain" size="medium" type="primary">plain</z-button>
    <z-button class="demo-block" mode="flat" size="medium" type="primary">flat</z-button>
  </view>

  <view class="demo-view demo-p-1 demo-my-1">
    <view class="demo-title">size</view>
    <view class="demo-desc">尺寸示例</view>
    <z-button class="demo-mb-1 demo-block" mode="raised" type="primary" size="x-large">x-large</z-button>
    <z-button class="demo-mb-1 demo-block" mode="raised" type="success" size="large">large</z-button>
    <z-button class="demo-mb-1 demo-block" mode="raised" type="default" size="medium">medium</z-button>
    <z-button class="demo-mr-1 demo-inline" mode="raised" type="warning" size="small">small</z-button>
    <z-button class="demo-mr-1 demo-inline" mode="raised" type="danger" size="mini">mini</z-button>
  </view>

  <view class="demo-view demo-p-1 demo-my-1">
    <view class="demo-title">border-radius</view>
    <view class="demo-desc">边角示例</view>
    <z-button class="demo-mr-1 demo-inline" mode="plain" type="primary" size="small" border-radius="base">base</z-button>
    <z-button class="demo-mr-1 demo-inline" mode="plain" type="success" size="small" border-radius="pill">pill</z-button>
    <z-button class="demo-mr-1 demo-inline" mode="plain" type="warning" size="small" border-radius="none">none</z-button>
    <z-button class="demo-mr-1 demo-inline" mode="plain" type="danger" size="small" border-radius="circle">circle</z-button>
  </view>

  <view class="demo-view demo-p-1 demo-my-1">
    <view class="demo-title">other</view>
    <view class="demo-desc">其他展示，disabled，loading</view>
    <z-button class="demo-mb-1 demo-block" mode="raised" type="primary" size="medium" loading>loading</z-button>
    <z-button class="demo-block" mode="raised" type="primary" size="medium" disabled>disabled</z-button>
  </view>

  <view class="demo-view demo-p-1 demo-my-1">
    <view class="demo-title">fab</view>
    <view class="demo-desc">看右下角</view>
    <z-button size="large" type="success" fab>f</z-button>
  </view>

</view>
