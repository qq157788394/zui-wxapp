.zui-capsule {
  position: relative;
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  font-size: 10px;
  box-sizing: inherit;
  overflow: hidden;
  border-radius: 16px;
}
.zui-capsule::before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  left: 0;
  bottom: 0;
  width: 200%;
  height: 200%;
  border: 1px solid #878d99;
  color: #878d99;
  -webkit-transform: scale(0.5);
          transform: scale(0.5);
  -webkit-transform-origin: left top;
          transform-origin: left top;
  pointer-events: none;
  box-sizing: border-box;
  border-radius: 16px;
}
.zui-capsule__title {
  background-color: #878d99;
  color: #fff;
  padding: 2px 4px 2px 8px;
}
.zui-capsule__desc {
  color: #878d99;
  padding: 2px 8px 2px 4px;
}
.zui-capsule--primary::before {
  border-color: #409EFF;
}
.zui-capsule--primary .zui-capsule__title {
  background-color: #409EFF;
}
.zui-capsule--primary .zui-capsule__desc {
