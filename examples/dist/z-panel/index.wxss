:host {
  box-sizing: border-box;
}
.zui-panel {
  position: relative;
  display: block;
  background-color: #fff;
  box-sizing: inherit;
  padding: 16px;
}
.zui-panel.divider-top::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #d8dce5;
  color: #d8dce5;
  width: 200%;
  -webkit-transform: scale(0.5);
          transform: scale(0.5);
  -webkit-transform-origin: left top;
          transform-origin: left top;
  pointer-events: none;
  box-sizing: border-box;
}
.zui-panel.divider-bottom::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  width: 200%;
  border-bottom: 1px solid #d8dce5;
  color: #d8dce5;
  -webkit-transform: scale(0.5);
          transform: scale(0.5);
  -webkit-transform-origin: left bottom;
          transform-origin: left bottom;
  pointer-events: none;
  box-sizing: border-box;
}
.zui-panel-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.zui-panel-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
}
.zui-panel-cell__ft {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  margin-left: 16px;
}
.zui-panel-title {
  font-size: 16px;
