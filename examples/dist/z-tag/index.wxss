.zui-tag.zui-tag--small {
  font-size: 11px;
  padding: 2px 6px;
  line-height: 1.5;
}
.zui-tag.zui-tag--mini {
  font-size: 10px;
  padding: 2px 4px;
  line-height: 1.5;
}
.zui-tag.zui-tag--primary {
  background-color: rgba(64, 158, 255, 0.1);
  color: #409EFF;
  border-color: rgba(64, 158, 255, 0.2);
}
.zui-tag.zui-tag--success {
  background-color: rgba(103, 194, 58, 0.1);
  color: #67c23a;
  border-color: rgba(103, 194, 58, 0.2);
}
.zui-tag.zui-tag--warning {
  background-color: rgba(235, 158, 5, 0.1);
  color: #eb9e05;
  border-color: rgba(235, 158, 5, 0.2);
}
.zui-tag.zui-tag--danger {
  background-color: rgba(250, 85, 85, 0.1);
  color: #fa5555;
  border-color: rgba(250, 85, 85, 0.2);
}
.zui-tag.zui-tag--info {
  background-color: rgba(135, 141, 153, 0.1);
  color: #878d99;
  border-color: rgba(135, 141, 153, 0.2);
}
.zui-tag.zui-tag--hit {
  border-color: transparent;
}
.zui-tag.zui-tag--cricle {
  border-radius: 16px;
}
.zui-tag.zui-tag--mark {
  border-radius: 8px 4px 4px 0;
}
